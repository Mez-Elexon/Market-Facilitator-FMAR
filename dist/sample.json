openapi: 3.0.4
info:
  title: Student API
  description: Details about **students** enrolled in *different* classes 
  contact:
    name: Joel William Fernandes
    email: joel.fernandes@gmail.com
  version: 1.0.0
servers: 
  - url: https://devapi.com
  - url: http://stagingapi.com
  - url: http://prodapi.com
tags: 
  - name: retrieve
    description: Get data for students
  - name: add
    description: Add new student data to the register
paths:
  /retrieveStudents:
    get:
      tags:
        - retrieve
      description: Get data for a multiple students
      parameters:
        - in: query
          name: student
          required: true
          schema: 
            type: string
            example: Joel
        - in: query
          name: id
          required: true
          schema:
            type: integer
            example: 22
      responses:
        200:
          description: Success response
          content:
            application/json:
              schema:
                type: array
                items:
                  properties:
                    studentID:
                      type: integer
                      example: 3
                    studentName:
                      type: string
                      example: David
                    studentSurname:
                      type: string
                      example: Fernandes
  /addStudent:
    post:
      tags:
        - add
      description: Create a new student record
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                studentName:
                  type: string
                  example: David
                studentSurname:
                  type: string
                  example: Fernandes
      responses:
        201:
          description: Record Created
          content: 
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: New record added
  /retrieveStudent/{id}:
    description: Retrieve data for a single student by ID 
    get: 
      tags: 
        - retrieve
      description: Getsingle student
      parameters: 
        - in: path
          name: id
          required: true
          schema: 
            type: integer
      responses:
        200:
          description: Success response
          content: 
            application/json:
              schema:
                $ref: '#/components/schemas/student'
components:
  schemas:
    student:
      type: object
      properties:
        studentName:
          type: string
          example: David
        studentSurname:
          type: string
          example: Fernandes
    students:
      type: array
      items:
        properties:
          studentID:
            type: integer
            example: 3
          studentName:
            type: string
            example: David
          studentSurname:
            type: string
            example: Fernandes
                  
